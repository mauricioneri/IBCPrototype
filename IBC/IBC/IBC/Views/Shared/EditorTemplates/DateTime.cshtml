@model DateTime?

@{
    string valor = string.Empty;
    if (Model.HasValue)
    {
        valor = @Model.Value.ToString("YYYY-mm-DD");
    }


    var htmlField = ViewData.TemplateInfo.HtmlFieldPrefix;
}



<input class="datepicker form-control" type="text" id="@htmlField" name="@htmlField" value="@valor" />
@section Scripts {

    <script type="text/javascript">
        $('.datepicker').datepicker({
            weekStart: 1,
            color: 'red'
        });
    </script>
}