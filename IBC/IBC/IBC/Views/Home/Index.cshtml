                </p>
                <p>
                    @Html.ActionButton("DogAges", "Index", "DogAges")
                </p>
                <p>
                    @Html.ActionButton("Raças", "Index", "DogBreeds")
                </p>
                <p>
                    @Html.ActionButton("Sexos", "Index", "DogSexes")
                </p>
                <p>
                    @Html.ActionButton("DogTypes", "Index", "DogTypes")
                </p>
            </div>
            <div class="tab-pane fade" id="tabAdmin">
                <br />
                <p>
                    @Html.ActionLink("Meus Dogs", "Index", "Dogs", new { @class = "btn btn-default" })
                </p>
            </div>
        </div>
    </div>


