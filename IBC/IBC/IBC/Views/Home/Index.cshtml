@using IBC.Helpers
@{
    ViewBag.Title = "Index";
}
<h2>Painel de controle</h2>


@{
    var IndexMode = (string)ViewBag.IndexMode.ToString();

 

    <div class="container">
        <ul class="nav nav-pills">
            <li class="active" data-toggle="pill"><a href="#tabDogs">Cacorros</a></li>
