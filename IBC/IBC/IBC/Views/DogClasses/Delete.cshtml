@using IBC.Helpers 
@model IBC.Models.Views.DogClassView
@{
    ViewBag.Title = "Delete";
    ViewBag.ControllerName = "Classes";
}
<h4>@ViewBag.Title <small>@ViewBag.ControllerName</small></h4>


<h3>Are you sure you want to delete this?</h3>
<div> 
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.DogClassParent)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DogClassParent.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DogAges)
        </dt>
        <dd>
            <ul>
                @foreach (var item in Model.DogAges)
                {
                    if (item.State)
                    {
                        <li>@Html.DisplayName(@item.Description)</li>
                    }
                }
            </ul>
        </dd>
        @if (User.IsInRole("MasterMTF"))
        {

            <dt>
                @Html.DisplayNameFor(model => model.UserProcessing.UserName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.UserProcessing.UserName)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.CreationDate)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.CreationDate)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.ChangeDate)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ChangeDate)
            </dd>
        }

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @Html.SubmitButton("Delete")
            @Html.ActionButtonBack("Back to List", "Index")
        </div>
    }
</div>
