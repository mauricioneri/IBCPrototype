@model PagedList.IPagedList<IBC.Models.ContestEnrollmentPrice>
@using pl = PagedList.Mvc;
@using IBC.Helpers
@{
    ViewBag.Title = "Index";
    ViewBag.ControllerName = "Contest Enrollment Price";
    string ContestName = String.Format("Voltar para {0}", ViewBag.ContextName);
}

@using (Html.BeginForm())
{
    <div class="container-fluid">
        @Html.AntiForgeryToken()
        @{ Html.RenderPartial("_IndexPage.DefaultControls"); }

        <div class="table-responsive">
            <table class="table table-striped table-condensed">
                <tr>

                    <th>
                        @Html.DisplayNameFor(model => model[0].DogClass.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].StartDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].EndDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].Price)
                    </th>
                    @if (User.IsInRole("MasterMTF"))
                    {
                        <th>
                            @Html.DisplayNameFor(model => model[0].UserProcessing.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].CreationDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].ChangeDate)
                        </th>
                    }
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.DogClass.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StartDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EndDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        @if (User.IsInRole("MasterMTF"))
                        {
                            <td>
                                @Html.DisplayFor(modelItem => item.UserProcessing.UserName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreationDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ChangeDate)
                            </td>
                        }
                        @{ Html.RenderPartial("_IndexPage.ActionButtons", new IBC.Models.Views.ActionButtonsView { Id = item.Id }); }
                    </tr>
                }

            </table>
        </div>
        @{Html.RenderPartial("_IndexPage.Paginator");}
    </div>

    <div class="row">
        <div class="col-md-2">@Html.ActionButton(ContestName, "Details", "Contests", new { id = ViewBag.ContextId }, "menu-left")</div>
    </div>
}