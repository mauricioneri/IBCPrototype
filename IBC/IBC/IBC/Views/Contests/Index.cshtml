@model PagedList.IPagedList<IBC.Models.Contest>
@using pl = PagedList.Mvc;
@using IBC.Helpers;
@{
    ViewBag.Title = "Index";
    ViewBag.ControllerName = "Contest";
}

@using (Html.BeginForm())
{
    <div class="container-fluid">
        @Html.AntiForgeryToken()
        @{ Html.RenderPartial("_IndexPage.DefaultControls"); }

        <div class="table-responsive">
            <table class="table table-striped table-condensed">
                <tr>
                    <th>
                        @Html.ActionLink(Html.DisplayNameFor(model => model[0].Name).ToHtmlString(), "Index", new { ColumnName = "Name", Ascendent = !ViewBag.Ascendent, CurrentFilter = ViewBag.CurrentFilter as string })
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].StartDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].EndDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].PublicationDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].EnrollmentStartDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].EnrollmentEndDate)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model[0].Opened2Enrollment)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].ContestResult)
                    </th>
                    @if (User.IsInRole("MasterMTF"))
                    {
                        <th>
                            @Html.DisplayNameFor(model => model[0].UserProcessing.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].CreationDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].ChangeDate)
                        </th>
                    }
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StartDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EndDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PublicationDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EnrollmentStartDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EnrollmentEndDate)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Opened2Enrollment)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContestResult)
                        </td>
                        @if (User.IsInRole("MasterMTF"))
                        {
                            <td>
                                @Html.DisplayFor(modelItem => item.UserProcessing.UserName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreationDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ChangeDate)
                            </td>
                        }
                        @{ Html.RenderPartial("_IndexPage.ActionButtons", new IBC.Models.Views.ActionButtonsView { Id = item.Id }); }
                    </tr>
                }

            </table>
        </div>
        @{Html.RenderPartial("_IndexPage.Paginator");}
    </div>
}